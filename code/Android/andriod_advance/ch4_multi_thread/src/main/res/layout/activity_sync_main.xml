<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sync.SyncMainActivity">

    <Button
        android:id="@+id/but_object_wait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="wait()" />

    <Button
        android:id="@+id/but_object_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="notify()/notifyAll()" />

    <Button
        android:id="@+id/but_thread_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="理解Thread中 yield(), join(), sleep()" />

    <Button
        android:id="@+id/but_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="锁机制" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="ifContentScrolls"
    android:scrollbars="vertical"
    tools:context="as1124.com.helloworld.HelloWorldActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="第一章节基础内容学习"
            android:textAllCaps="false"
            android:textColor="#00FF00"
            android:textSize="25sp" />

        <Button
            android:id="@+id/but_lifecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity生命周期" />

        <Button
            android:id="@+id/but_normal_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity无参跳转/销毁" />

        <Button
            android:id="@+id/but_hide_intent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐式Intent调用" />

        <Button
            android:id="@+id/but_launch_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启动模式" />

        <Button
            android:id="@+id/butStartNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="调用系统Dialog显示提示" />

        <Button
            android:id="@+id/butStartDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义Dialog显示提示" />

        <Button
            android:id="@+id/but_deep_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deep Link 和 Schema" />

        <Button
            android:id="@+id/button_ch3_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Layout布局器 Listview内容" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
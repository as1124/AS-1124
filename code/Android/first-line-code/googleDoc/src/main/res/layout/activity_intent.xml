<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="ifContentScrolls"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/but_intent_add_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐式Intent设置闹钟" />

        <Button
            android:id="@+id/but_intent_show_alarms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐式Intent显示所有闹钟" />

        <Button
            android:id="@+id/but_intent_add_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="隐式Intent添加日程" />

        <Button
            android:id="@+id/but_intent_add_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拍照" />

        <Button
            android:id="@+id/but_intent_pick_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="系统联系人" />

        <Button
            android:id="@+id/but_intent_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电话" />

        <Button
            android:id="@+id/but_intent_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="短信" />

        <Button
            android:id="@+id/but_intent_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开设置" />

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/asyn_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="初始text内容"/>

    <Button
        android:id="@+id/but_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thread更新text(崩溃)" />

    <Button
        android:id="@+id/but_runOnUI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="runOnUiThread" />

    <Button
        android:id="@+id/but_handler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler更新text" />

    <Button
        android:id="@+id/but_ayncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AsyncTask更新text" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".multiwindow.MultiWindowActivity">

    <TextView
        android:id="@+id/text_multi_window"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="请输入信息"
        android:minLines="5" />

    <Button
        android:id="@+id/but_support_resize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity是否运行多窗口" />

    <Button
        android:id="@+id/but_start_pip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="画中画模式下相邻window启动Activity" />

    <Button
        android:id="@+id/but_start_pip2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动画中画模式" />
</LinearLayout>
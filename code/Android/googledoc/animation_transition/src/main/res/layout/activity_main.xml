<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/but_animator_state_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View's StateAnimator " />

    <Button
        android:id="@+id/but_to_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帧（Drawable）动画" />

    <Button
        android:id="@+id/but_to_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Animation" />

    <Button
        android:id="@+id/but_to_animator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Property Animator" />

    <Button
        android:id="@+id/but_to_view_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animation with view movement"
        android:tooltipText="利用动画移动View" />

    <Button
        android:id="@+id/but_to_zoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zoom View" />

</LinearLayout>
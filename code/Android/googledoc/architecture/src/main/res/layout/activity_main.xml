<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/but_to_binding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DataBinding" />

    <Button
        android:id="@+id/but_to_lifecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LifeCycle Aware Management" />

    <Button
        android:id="@+id/but_to_viewmodel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ViewModel" />

    <Button
        android:id="@+id/but_to_livedata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Live Data" />

    <Button
        android:id="@+id/but_to_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room" />


</LinearLayout>
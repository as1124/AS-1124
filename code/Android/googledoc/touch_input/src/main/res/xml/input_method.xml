<?xml version="1.0" encoding="utf-8"?>

<input-method xmlns:android="http://schemas.android.com/apk/res/android"
    android:icon="@drawable/qq"
    android:isDefault="true"
    android:isVrOnly="false"
    android:settingsActivity="com.as1124.touch_input.softinput.InputMethodSettingActivity"
    android:supportsSwitchingToNextInputMethod="true">

    <subtype
        android:name="English"
        android:icon="@drawable/right_bottom"
        android:imeSubtypeExtraValue="somePrivateOption=true"
        android:imeSubtypeLocale="zh_CN"
        android:imeSubtypeMode="keyboard"
        android:label="English"
        android:languageTag="zh_CN" />


    <subtype
        android:name="中文"
        android:icon="@drawable/right_bottom"
        android:imeSubtypeExtraValue="foobar=30,someInternalOption=false"
        android:imeSubtypeLocale="zh_CN"
        android:imeSubtypeMode="keyboard"
        android:label="中文"
        android:languageTag="zh_CN" />


</input-method>
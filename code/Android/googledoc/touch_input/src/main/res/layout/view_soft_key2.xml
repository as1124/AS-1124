<?xml version="1.0" encoding="utf-8"?>
<com.as1124.touch_input.softinput.way2.SoftInputKeyLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/key_state_background"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_key_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_key_major"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_key_low"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/normalKey" />

    <TextView
        android:id="@+id/text_key_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:textAlignment="center"
        android:textColor="@color/keyText"
        android:textSize="@dimen/minorKey"
        android:visibility="gone" />

</com.as1124.touch_input.softinput.way2.SoftInputKeyLayout>
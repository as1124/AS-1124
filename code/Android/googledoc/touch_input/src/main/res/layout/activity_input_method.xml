<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".softinput.InputMethodActivity">

    <Button
        android:id="@+id/but_setting_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开键盘设置" />

    <Button
        android:id="@+id/but_switch_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="切换输入法" />

    <Button
        android:id="@+id/but_switch_subtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="切换输入法SubType" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="纯数字输入"
        android:imeOptions="actionNext"
        android:inputType="number|numberDecimal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码随机键盘输入"
        android:imeOptions="actionNext"
        android:inputType="numberPassword|textPassword" />

    <EditText
        android:id="@+id/input_self_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入内容"
        android:imeActionId="1234"
        android:imeActionLabel="IME-Label"
        android:inputType="textEmailAddress|textCapCharacters" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="500dp"></WebView>

        <Button
            android:id="@+id/but_load_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="loadUrl调用网页" />

        <Button
            android:id="@+id/but_eval_js"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="evaluateJavascript 调用网页" />

        <Button
            android:id="@+id/but_js_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拦截 onJsAlert 调用原生" />

        <Button
            android:id="@+id/but_js_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拦截 onJsPrompt 调用原生" />
    </LinearLayout>

</ScrollView>
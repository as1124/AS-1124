<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".audio.AudioActivity">

    <Button
        android:id="@+id/but_audio_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动MediaService" />

    <Button
        android:id="@+id/but_show_audio_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show MediaStyle-Notification" />

    <Button
        android:id="@+id/but_media_browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建并启用MediaBrowser" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/but_audio_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始播放" />

        <Button
            android:id="@+id/but_audio_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="暂停" />

        <Button
            android:id="@+id/but_audio_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止" />
    </LinearLayout>

</LinearLayout>
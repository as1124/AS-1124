<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/but_camera_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="调用系统相机拍照显示缩略图" />

    <Button
        android:id="@+id/but_photo_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="拍照保存为文件" />

    <Button
        android:id="@+id/but_media_scanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存照片并被Media_Scanner发现" />

    <Button
        android:id="@+id/but_scale_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decode a scaled image" />

    <Button
        android:id="@+id/but_camera_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取相机的相关特征" />

    <Button
        android:id="@+id/but_to_selfcamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自建Camera应用" />

    <Button
        android:id="@+id/but_to_selfvideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自建Video-Capture应用" />

    <ImageView
        android:id="@+id/image_camera"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:adjustViewBounds="false" />

</LinearLayout>
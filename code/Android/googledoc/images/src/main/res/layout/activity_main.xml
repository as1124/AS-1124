<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <TextView
            android:layout_width="393dp"
            android:layout_height="391dp"
            android:background="#ff00ff"
            android:text="393dp x 391dp,\n DisplayMetrics.heightPixels/DisplayMetrics.scaledDensity" />

        <TextView
            android:layout_width="196.5dp"
            android:layout_height="391dp"
            android:background="#ffffff"
            android:text="196.5 x 391dp" />

        <Button
            android:id="@+id/but_to_drawable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drawable学习" />

        <Button
            android:id="@+id/but_to_bitmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bitmap学习" />

        <Button
            android:id="@+id/but_palette"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Palette-Builder" />

        <Button
            android:id="@+id/but_to_select_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片多选功能" />

    </LinearLayout>

</ScrollView>
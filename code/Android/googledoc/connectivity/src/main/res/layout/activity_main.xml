<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/but_to_https"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HttpsURLConnection and Configuration changes" />

    <Button
        android:id="@+id/but_get_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取当前网络状态信息" />

    <Button
        android:id="@+id/but_network_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="网络设置" />

    <Button
        android:id="@+id/but_data_whitelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求加入流量白名单" />

    <Button
        android:id="@+id/but_sync_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sync Adapter(账号信息同步)" />

    <Button
        android:id="@+id/but_to_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="蓝牙管理" />

    <Button
        android:id="@+id/but_to_nfc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NFC功能" />

    <Button
        android:id="@+id/but_to_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WI-FI功能" />

    <Button
        android:id="@+id/but_to_usb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USB 功能" />

    <Button
        android:id="@+id/but_to_vpn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VPN 功能" />

    <Button
        android:id="@+id/but_to_volley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volley 框架" />

    <Button
        android:id="@+id/but_to_okhttp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OKHttp 框架" />

    <Button
        android:id="@+id/but_to_retrofit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrofit 框架" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/image_email_contact"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/text_email_sender"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/text_email_date"
        android:layout_toRightOf="@id/image_email_contact"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/text_email_topic"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/text_email_sender"
        android:layout_toLeftOf="@id/text_email_date"
        android:layout_toRightOf="@id/image_email_contact"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1" />

    <TextView
        android:id="@+id/text_email_summary"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/text_email_topic"
        android:layout_toLeftOf="@id/text_email_date"
        android:layout_toRightOf="@id/image_email_contact"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1" />

    <TextView
        android:id="@+id/text_email_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp" />
</RelativeLayout>
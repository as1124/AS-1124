<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings >
		<setting name="cacheEnabled" value="true"/>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>

	<!-- 类型别名是为 Java 类型设置一个短的名字。它只和 XML 配置有关，存在的意义仅在于用来减少类完全限定名的冗余 -->
	<typeAliases>
		<package name="com.as1124.syx.resources"/>
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver"/>
		        <property name="url" value="jdbc:mysql://127.0.0.1:3306/javacore"/>
		        <property name="username" value="root"/>
		        <property name="password" value="huangjw"/>
		        <property name="driver.encoding" value="UTF-8"/>
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
<!-- 		<mapper resource="com/as1124/syx/database/mapper/SyxUserMapper.xml" /> -->
<!-- 		<mapper class="com.as1124.syx.database.mapper.SyxUserMapper"/> -->
		<package name="com.as1124.syx.database.mapper"/>
	</mappers>
</configuration>